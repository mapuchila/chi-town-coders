extends ../layout.jade

block content
	header
		.header-content
			.header-content-inner
				h2 Sign-Up
				form(method='post', action='/users/sign-up')
					if errors
						.alert.alert-danger(role='alert')
							for error in errors
								//span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
								span.sr-only
									| Error:
								| #{error.msg}
								br
					.form-group
						label(for="first-name")
							| First Name
						input#first-name.form-control(type="text", name="first-name", value="", placeholder="First Name")
					.form-group
						label(for="last-name")
							| Last Name
						input#last-name.form-control(type="text", name="last-name", value="", placeholder="Last Name")
					.form-group
						label(for="username")
							| Hacker Name
						input#last-name.form-control(type="text", name="username", value="", placeholder="Hacker Name")
					.form-group
						label(for="email")
							| Email Address
						input#email.form-control(type="email", name="email", value="", placeholder="Email Address")
					.form-group
						label(for="password")
							| Password
						input#password.form-control(type="text", name="password", value="",  placeholder="Password")
					.form-group
						label(for="password-confirm")
							| Password Confirm
						input#password-confirm.form-control(type="text", name="password-confirm", value="",  placeholder="Confirm Password")
					button.btn.btn-default(type="submit")
						| Submit